generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName String 
  lastName String
  username String @unique
  userType UserType @default(CLIENT)
  phone String @unique
  whatsappNo String @unique
  email String @unique
  state String
  password String
  status Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}


enum UserType {
  CLIENT
  ADMIN
}